<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#f24b88</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="statusbar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="common_text">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/common</item>
    </style>

    <style name="copyright">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/copyright</item>
    </style>

    <style name="list">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/list</item>
    </style>

    <style name="user_list_id">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/user_list_id</item>
    </style>

    <style name="user_list_name">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/user_list_name</item>
    </style>

    <style name="word">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/word</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="content">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">@dimen/common</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="hint_text">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/common</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="btn_s_on">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn</item>
        <item name="android:background">@color/commonColor</item>
    </style>

    <style name="btn_s_off">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn</item>
        <item name="android:background">@color/darkgray</item>
    </style>

    <style name="btn_c">
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/commonColor</item>
        <item name="android:textSize">@dimen/btn</item>
        <item name="android:background">@drawable/btn_off</item>
    </style>

    <style name="menu">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/menu</item>
        <item name="android:background">@color/commonColor</item>
    </style>
    <style name="join">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/common</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

</resources>
